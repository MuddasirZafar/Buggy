<div class=" d-flex flex-column align-items-center my-4">

  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.text_field :email, class: "form-control my-1" , autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.text_field :password, class: "form-control my-1" , autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" , class:"my-1 btn btn-primary col-12"%>
  </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
