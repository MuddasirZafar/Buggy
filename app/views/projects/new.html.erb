<div class="container-new">
  <h2>Create New Project</h2>
  <%= form_for @project, html: { class: "project-form" } do |f| %>
    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "Enter Project Name", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :description %><br />
      <%= f.text_field :description, class: "form-control", autofocus: true, placeholder: "Enter Project Description", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :user_ids, "Developers" %><br />
      <%= f.collection_select :user_ids, User.where(user_type: "developer"), :id, :name, { }, { multiple: true, required: true, class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.label :user_ids, "QAs" %><br />
      <%= f.collection_select :user_ids, User.where(user_type: "qa"), :id, :name, { }, { multiple: true, required: true, class: 'form-control' } %>
    </div>

    <div class="form-actions">
      <%= f.submit "Create Project", class: "btn btn-primary col-12" %>
    </div>
  <% end %>
</div>
